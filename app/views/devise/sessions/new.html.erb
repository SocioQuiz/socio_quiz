    <div class="container" style="margin-top: 100px;">
        <div id="login-area" class="row col-md-8 col-md-offset-2">
            <!-- login via fb gg+ twitter -->
            <div class="well col-md-4">
                <legend>Login with</legend>
                <%= link_to "Facebook", user_omniauth_authorize_path(:facebook), :class => 'btn btn-primary btn-raised withripple full-width' %>
                <%= link_to "Google +", user_omniauth_authorize_path(:google_oauth2), :class => 'btn btn-danger btn-raised withripple full-width' %>
                <%= link_to "Twitter", user_omniauth_authorize_path(:twitter), :class => 'btn btn-info btn-raised withripple full-width' %>

<!--
                <a href="javascript:void(0)" class="btn btn-primary btn-raised withripple full-width">Facebook</a>
                <a href="javascript:void(0)" class="btn btn-danger btn-raised withripple full-width">Google +</a>
                <a href="javascript:void(0)" class="btn btn-info btn-raised withripple full-width">Twitter</a>
-->
            </div>
            <h3 class="col-md-1" style="text-align: center;">Or</h3>
            <!-- login via email -->
            <div class="well col-md-7">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-signin") do |f| %>
                    <%= devise_error_messages! %>
                    <div class="form-horizontal">
                        <fieldset>
                            <legend>Login with Email</legend>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email"  %>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
                                </div>
                            </div>

                           
                            <% if devise_mapping.rememberable? -%>
                                <div class="checkbox" style="float: left;">
                                    <input name="user[remember_me]" type="hidden" value="0" />
                                    <label style="padding-left: 0;">                                        
                                        <input class="checkbox" id="user_remember_me" name="user[remember_me]" type="checkbox" value="1" />
                                        Stay logged in
                                    </label>
<!--
                                    <label for="user_remember_me" style="padding-left: 0;">
                                        <%= f.check_box :remember_me, :class => "checkbox" %>
                                        <%= f.label :remember_me, :style => "padding-left: 0" %>
                                    </label>
-->
                                </div>
                            <% end -%>
                        
                        
                            <div style="position: absolute; bottom: 15px; left: 15px;">Don't have an account? <%=link_to "Create one" '<i class="mdi-navigation-arrow-forward"></i>'.html_safe, new_user_registration_path %></div>
                            <%= f.submit :class => "btn btn-primary btn-fab btn-raised mdi-action-exit-to-app mdi-navigation-arrow-forward", :style => "position: absolute; bottom: 15px; right: 15px;", :value => "âœ“" %>    
                            
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
