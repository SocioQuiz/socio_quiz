<html>

<body>
    <div class="navbar navbar-default">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="javascript:void(0)">Logo SocioQuiz</a>
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="javascript:void(0)">Home</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                 <li>
                    <%= link_to "Log in", new_user_session_path, {:class => 'navbar-link'} %>
                </li>
                <li>
                    <%= link_to "Sign up", new_user_registration_path, {:class => 'navbar-link', :style => 'border-left: 3px solid white;'} %>
                </li>
            </ul>
        </div>
    </div>
    <div class="container" style="margin-top: 100px;">
        <div id="login-area" class="row col-md-8 col-md-offset-2">
            <!-- Signup with fb gg+ twitter -->
            <div class="well col-md-4">
                <legend>Sign up with</legend>
                <a href="javascript:void(0)" class="btn btn-primary btn-raised withripple full-width">Facebook</a>
                <a href="javascript:void(0)" class="btn btn-danger btn-raised withripple full-width">Google +</a>
                <a href="javascript:void(0)" class="btn btn-info btn-raised withripple full-width">Twitter</a>
            </div>
            <h3 class="col-md-1" style="text-align: center;">Or</h3>
            <!-- Sign up via email -->
            <div class="well col-md-7">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>
                    <form class="form-horizontal">
                        <fieldset>
                            <legend>Sign up with Email</legend>
                            
                            <div class="form-group">
                                <div class="col-lg-12">
                                   <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "inputEmail", :placeholder => "Email" %><br/>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                   <!--<% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>-->
                                    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "inputPassword", :placeholder => "Password (8 characters minimum)" %><br/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :id => "inputPassword", :placeholder => "Password confirmation" %>   
                                </div>
                            </div>
                            <div>
                                 <%= f.submit :href => "javascript:void(0)", :class => "btn btn-primary btn-fab btn-raised mdi-navigation-check", :style => "position: absolute; bottom: 15px; right: 15px;", :value => "âœ“" %>
                            </div>
                        </fieldset>
                    </form>
                <% end %>
            </div>
           
        </div>
    </div>


</body>
</html>
