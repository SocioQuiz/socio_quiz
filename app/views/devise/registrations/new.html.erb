    <div class="container" style="margin-top: 100px;">
        <div id="login-area" class="row col-md-8 col-md-offset-2">
            <!-- Signup with fb gg+ twitter -->
            <div class="well col-md-4">
                <legend>Login with</legend>
                <%= link_to "Facebook", user_omniauth_authorize_path(:facebook), :class => 'btn btn-primary btn-raised withripple full-width' %>
                <%= link_to "Google +", user_omniauth_authorize_path(:google_oauth2), :class => 'btn btn-danger btn-raised withripple full-width' %>
                <%= link_to "Twitter", user_omniauth_authorize_path(:twitter), :class => 'btn btn-info btn-raised withripple full-width' %>

<!--
                <a href="javascript:void(0)" class="btn btn-primary btn-raised withripple full-width">Facebook</a>
                <a href="javascript:void(0)" class="btn btn-danger btn-raised withripple full-width">Google +</a>
                <a href="javascript:void(0)" class="btn btn-info btn-raised withripple full-width">Twitter</a>
-->
            </div>
            <h3 class="col-md-1" style="text-align: center;">Or</h3>
            <!-- Sign up via email -->
            <div class="well col-md-7">
                
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div class="form-horizontal">
                    <%= devise_error_messages! %>
                        <fieldset>
                            <legend>Sign up with Email</legend>
                            
                            <div class="form-group">
                                <div class="col-lg-12">
                                   <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email" %><br/>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                   <%= f.text_field :name, :class => "form-control", :placeholder => "Name" %><br/>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                   <!--<% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>-->
                                    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password (8 characters minimum)" %><br/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Password confirmation" %>   
                                </div>
                            </div>
                            <div>
                                 <%= f.submit :class => "btn btn-primary btn-fab btn-raised mdi-navigation-check", :style => "position: absolute; bottom: 15px; right: 15px;", :value => "âœ“", :type => "submit", :name => "commit" %>
                            </div>
                        </fieldset>
                    </div>
                <% end %>
            </div>
           
        </div>
    </div>
