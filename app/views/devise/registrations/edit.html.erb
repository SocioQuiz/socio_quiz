<body>
    <div class="navbar navbar-default">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="javascript:void(0)">Logo SocioQuiz</a>
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav">
                <li><%= link_to "Home", root_path %>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="javascript:void(0)" style="padding: 8px 15px;">
                        <div style="border-radius: 100%; border: 2px solid rgba(255, 255, 255, 0.84); width: 45px; margin-left: auto; margin-right: auto;">
                            <i class="mdi-social-notifications" style="font-size: 40px;  position: relative;">
                                <span class="badge" style="position: absolute; right: 5px;
                        bottom: -5px; border-radius: 2px !important; background-color: #D9534F;">3</span>
                            </i>
                        </div>
                    </a>
                </li>
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
                        <p style="margin: 0px; padding: 0px;">
                            <img class="row-avatar" src="http://lorempixel.com/56/56/people/6" alt="icon">Username
                            <b class="caret"></b>
                        </p>
                    </a>
                    <ul class="dropdown-menu">
                        <li style="padding: 3px 20px; font-size: 16px;">Total Point: 9696</li>
                        <li><%= link_to "Edit Profile", edit_user_registration_path %>
                        </li>
                        <li class="divider"></li>
                        <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="container" style="margin-top: 100px;">
    
          <div class="well col-md-8 col-md-offset-2" >
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= devise_error_messages! %>
                  <form class = "form-horizontal">
                      <fieldset>
                          <legend>Edit <%= resource_name.to_s.humanize %></legend>
                          <div class="form-group">
                              <div class="col-lg-12">
                                 <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "inputEmail", :placeholder => "Email" %><br/>
                              </div>
                          </div>

                          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                          <% end %>

                          <div class="form-group">
                              <div class="col-lg-12">
                                  <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "inputPassword", :placeholder => "Leave blank if you don't want to change it" %><br/>
                              </div>
                          </div>

                           <div class="form-group">
                              <div class="col-lg-12">
                                  <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :id => "inputPassword", :placeholder => "Password confirmation" %><br/>
                              </div>
                          </div>

                           <div class="form-group">
                              <div class="col-lg-12">
                                  <%= f.password_field :current_password, autocomplete: "off", :class => "form-control", :id => "inputPassword", :placeholder => "We need your current password to confirm your changes" %><br/>
                              </div>
                          </div>

                          <div>
                              <%= f.submit :href => "javascript:void(0)", :class => "btn btn-primary", :style => "position: absolute; bottom: 5px; right: 15px;", :value => "Update" %>
                          </div>
                      </fieldset>
                  </form>
              <% end %>
              <%= link_to '<button type="button" class="btn btn-danger" ><span class="mdi-action-delete"></span> Cancel my account</button>'.html_safe, registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete  %>
          </div>
     
    </div>

</body>

</html>