<div class="container" style="margin-top: 100px;">
<p id="notice"><%= notice %></p>

<p>
  <strong>Question:</strong>
  <%= @quiz.question %>
</p>

<%= form_for @play, url: { action: 'respond' } do |f| %>
    <%= f.hidden_field :quiz_id %>
    <%= f.text_field :reply %>
    <%= f.submit "submit" %>
<% end %>
</div>
