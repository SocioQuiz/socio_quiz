<h1>Editing quiz</h1>
<%
 if @quiz.user_id == current_user.id || current_user.permission == "admin"
%>
    <%= render 'form' %>
    <%= link_to 'Show', @quiz %> |
    <%= link_to 'Back', quizzes_path %>
<% else %>
    <h1><%= render :text => "Sorry! You don't have permission to do this operation." %></h1>
    <br>
    <%= link_to 'Back', quizzes_path %>
<% end %>
