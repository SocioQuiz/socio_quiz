<h1>Listing quizzes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.question %></td>
        <td><%= quiz.answer %></td>
        <td>
        <% if quiz.user %>
          <%= quiz.user.email %>
        <% end %>
        </td>
        <td>
          <%= link_to 'Show', quiz, :class => "btn btn-default active" %>
        <% if user_signed_in? %>
          <%= link_to 'Play', play_quiz_path(quiz), :class => "btn btn-default active" %>
          <%= link_to 'Edit', edit_quiz_path(quiz), :class=>"btn btn-default active" %>
          <%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger active" %>
        <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Quiz', new_quiz_path, :class => "btn btn-primary active" %>
<% end %>
