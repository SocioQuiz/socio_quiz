

<div class="container"  style="margin-top: 100px;">
    
    <div class="well col-md-12">
        <h1><center>Quizzes</center></h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Question</th>
                    <th>Created by</th>
                    <th>Option</th>
                </tr>
            </thead>
            <tbody>
                <% @quizzes.each do |quiz| %>
                <tr>
                    <td><%= quiz.question %></td>
                    <td>
                      <% if quiz.user %>
                        <% if quiz.user.name? %>
                          <%= quiz.user.name %>
                        <% else %>
                          <%= quiz.user.email %>
                        <% end %>
                      <% end %>
                    </td>
                    <td>

                        <a data-toggle="modal" data-target="#view-quizz" >
                            <i class="mdi-action-visibility"></i>
                        </a>
                        <div class="modal fade" id="view-quizz" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Quiz Detail</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="portlet">                                                 
                                                    <div class="form-body">
                                                        <div class="form-group">
                                                            <label for=" ">Question:</label>
                                                            <span><%= quiz.question %></span>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for=" ">Answer:</label>
                                                            <span><%= quiz.answer %></span>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for=" ">Created by:</label>
                                                            <% if quiz.user %>
                                                              <% if quiz.user.name? %>
                                                                <span><%= quiz.user.name %></span>
                                                              <% else %>
                                                                <span><%= quiz.user.email %></span>
                                                              <% end %>
                                                            <% end %>
                                                        </div>
                                                       
                                                        <div class="form-group">
                                                            <label for=" ">Type quiz:</label>
                                                            <span>...</span>
                                                           
                                                        </div>                             
                                                         <div class="form-group">
                                                            <label for=" ">Topic:</label>
                                                            <span>...</span>
                                                          
                                                        </div>   
                                                        <div class="modal-footer">
                                                            <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% if user_signed_in? %>
                            <a style="padding-left: 5px; padding-right: 5px;">
                                <%= link_to '<i class="mdi-av-play-arrow"></i>'.html_safe, play_quiz_path(quiz) %>
                            </a>
                            
                            <a style="padding-left: 5px; padding-right: 5px;">
                                <%= link_to '<i class="mdi-editor-mode-edit"></i>'.html_safe, edit_quiz_path(quiz) %>
                            </a>

                            <%= link_to '<i class="mdi-action-delete" ></i>'.html_safe,
                                quiz,
                                method: :delete,
                                data: { confirm: "Are you sure?"
                            } %> 
                        <% end %> 
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <br>

        <% if user_signed_in? %>
            <%= link_to '<button type="button" class="btn btn-default">
                  <span class="mdi-content-add"></span> New Course
                </button>'.html_safe, new_quiz_path %>
        <% end %>
    </div>
</div>


