    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <%= form_for(@quiz) do |f| %>
                    <% if @quiz.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= pluralize(@quiz.errors.count, "error") %> prohibited this quiz from being saved:</h2>

                          <ul>
                          <% @quiz.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                          </ul>
                        </div>
                    <% end %>
                    <div class="div-horizontal">
                        <div class="col-md-3">
                            <div class="side-option">
                                <div class="toolbar">
                                    <legend>Option</legend>
                                </div>
                                <div class="content">
                                    <div class="type-quiz">
                                        <div class="form-group">
                                            <label class="control-label">Type Quiz</label>
                                            <div class="">
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[type]" id="Multiple-choice" value="1" checked="" type="radio">Multiple choice
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[type]" id="Checkboxes" value="2" type="radio">Checkboxes
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[type]" id="True-False" value="3" type="radio">True / False
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[type]" id="Fill-in-the-blank" value="4" type="radio">Fill in the blank
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[type]" id="Matching" value="5" type="radio">Matching
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="category">
                                        <div class="form-group">
                                            <label class="control-label">Category</label>
                                            <div class="">
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <!--<%= f.select :category_id, @category.map{|t| [t.name, t.id]} %>-->
                                                        <input name="quiz[category_id]" id="Entertainment" value="1" checked="" type="radio">Entertainment
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[category_id]" id="Sport" value="2" type="radio">Sport
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[category_id]" id="TV-Movies" value="3" type="radio">TV & Movies
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[category_id]" id="Music" value="4" type="radio">Music
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[category_id]" id="Food-Drink" value="5" type="radio">Food & Drink
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[category_id]" id="Geography" value="6" type="radio">Geography
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[category_id]" id="General-Knowledge" value="7" type="radio">General Knowledge
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[category_id]" id="History" value="8" type="radio">History
                                                    </label>
                                                </div>
                                                <div class="radio radio-primary">
                                                    <label>
                                                        <input name="quiz[category_id]" id="Science-Nature" value="9" type="radio">Science and Nature
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9" style="border-left: 2px solid red;">
                            <div class="question">
                                <legend>Question</legend>
                                <div>
                                    <%= f.text_field :question, :class => "form-control", :rows => "3", :placeholder => "Please enter question here ..." %>
                                </div>
                                <div class="row" style="margin: 20px 0;">
                                    <div class="checkbox col-md-3 none-margin-top">
                                        <label>
                                            <input type="checkbox">Picture or Video:
                                        </label>
                                    </div>
                                    <div class="col-md-9">
                                        <input readonly="" class="form-control floating-label" placeholder="Browse..." type="text">
                                        <input id="inputFile" multiple="" type="file">
                                    </div>
                                </div>
                            </div>
                            <div class="divider"></div>
                            <div class="answer" style="padding: 15px;">
                                <legend>Selection</legend>
                                <div class="answer_true_false" style="display: none">
                                    <div class="radio radio-primary">
                                        <label>
                                            <input name="answer" id="true" value="option1"  checked="" type="radio">True
                                        </label>
                                    </div>
                                    <div class="radio radio-primary">
                                        <label>
                                            <input name="answer" id="false" value="option2" type="radio">False
                                        </label>
                                    </div>
                                </div>
                                <div class="answer_checkboxes" id="selection_checkboxes">
                                    <div class="row">
                                        <div class="checkbox col-md-3 none-margin-top">
                                            <!--<label>-->
                                              <!--<input type="checkbox">-->Selection 1:
                                            <!--</label>-->
                                        </div>
                                        <div class="form-group col-md-9">
                                          <%= f.text_field :selection_1, :class => "form-control input-lg", :id => "inputLarge"%>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="checkbox col-md-3 none-margin-top">
                                            <!--<label>-->
                                              <!--<input type="checkbox">-->Selection 2:
                                            <!--</label>-->
                                        </div>
                                        <div class="form-group col-md-9">
                                          <%= f.text_field :selection_2, :class => "form-control input-lg", :id => "inputLarge"%>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="checkbox col-md-3 none-margin-top">
                                            <!--<label>-->
                                              <!--<input type="checkbox">-->Selection 3:
                                            <!--</label>-->
                                        </div>
                                        <div class="form-group col-md-9">
                                          <%= f.text_field :selection_3, :class => "form-control input-lg", :id => "inputLarge"%>
                                        </div>
                                    </div>

                                    <!--<button class="btn btn-primary" type="button" onclick="javascript:addNewSelection();"><i class="mdi-content-add"></i>Add new selection</button>-->

				    <script language="javascript">
			              var selectionMax = 9;
				      var selectionNum = 3;
				      var addNewSelection = function(){
				          if(selectionNum < selectionMax){
					       selectionNum++;
					       var selectionElement = document.getElementById("selection_checkboxes");
						    
					       var domNewRow = document.createElement("div");
					       domNewRow.className = "row";
						    
					       var domNewCheckbox = document.createElement("div");
					       domNewCheckbox.className = "checkbox col-md-3 none-margin-top";
					       /*var domCheckboxLabel = document.createElement("label");
					       domCheckboxLabel.innerHTML = "Selection " + selectionNum + ":";
*/
					       domNewCheckbox.innerHTML = "Selection " + selectionNum + ":";
					       //domNewCheckbox.appendChild(domCheckboxLabel);
						    
					       var domNewInputTxt = document.createElement("div");
					       domNewInputTxt.className="form-group col-md-9";
					       domNewInputTxt.innerHTML = "<input class='form-control input-lg' id='inputLarge' name='quiz[selection_" + selectionNum + "9]' type='text' value='' />";
						    
					       domNewRow.appendChild(domNewCheckbox);
					       domNewRow.appendChild(domNewInputTxt);
					       selectionElement.appendChild(domNewRow);
console.log("sss");
					    }
					}
				</script>
                                </div>
                                <div>
				    <button class="btn btn-primary" type="button" onclick="javascript:addNewSelection();"><i class="mdi-content-add"></i>Add new selection</button>
                                </div>
                            </div>
                            <div class="divider"></div>
                            <div class="ans row" style="padding: 15px;">
                                <div class="checkbox col-md-2 none-margin-top">
                                    <label>
                                        <input type="checkbox">Answer:
                                    </label>
                                </div>
                                <div class="col-md-10">
                                     <%= f.text_field :answer, :class => "form-control", :rows => "3", :id => "textArea" %>
                                </div>
                            </div>
                            <div class="point row" style="padding: 15px;">
                                <div class="checkbox col-md-2 none-margin-top">
                                    <label>
                                        Points:
                                    </label>
                                </div>
                                <div class="col-md-10">
                                    <%= f.text_field :point, :class => "form-control", :rows => "3", :id => "textArea" %>
                                </div>
                            </div>
                            <% if user_signed_in? %>
                                <%= f.hidden_field :user_id, :value => current_user.id %>
                            <% end %>
                            <%= f.submit :class => "btn btn-primary", :style => "float: right" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
